<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/activity_main_right_base_view_bg"
    android:gravity="center"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_activity_main_right_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:lineSpacingExtra="10px"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:textColor="@color/setup_text"
        android:textSize="24px"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/iv_activity_main_right_item_item_dui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:src="@drawable/activity_main_button_right"
        />

    <ImageView
        android:id="@+id/iv_activity_main_right_item_item_cuo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:src="@drawable/activity_main_button_error"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_activity_main_right_item_item_jian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:src="@drawable/activity_main_button_cut"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_activity_main_right_item_item_jia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18px"
        android:src="@drawable/activity_main_button_add"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_activity_main_right_hz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/activity_main_hz_button"
        android:paddingBottom="13px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingTop="13px"
        android:text="汇总"
        android:textColor="@color/white"
        android:textSize="24px"
        android:visibility="gone"/>

</LinearLayout>