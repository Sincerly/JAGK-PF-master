<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="550px"
              android:layout_height="268px"
              android:background="@drawable/dialog_alert_bg"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dialog_alert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="26px"
        android:text="提示"
        android:textColor="@color/setup_text"
        android:textSize="28px"/>

    <TextView
        android:id="@+id/tv_dialog_alert_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45px"
        android:textColor="@color/setup_text"
        android:textSize="24px"/>

    <TextView
        android:id="@+id/tv_dialog_alert_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:background="@drawable/activity_login_setup_btn_qr"
        android:paddingBottom="10px"
        android:paddingLeft="40px"
        android:paddingRight="40px"
        android:paddingTop="10px"
        android:text="确认"
        android:textColor="@color/white"
        android:textSize="24px"/>


</LinearLayout>